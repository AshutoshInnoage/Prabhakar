<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id ="amazon_shop_kanban_view" model ="ir.ui.view">
        <field name = "name">amazon.shops.kanban.view</field>
        <field name = "model">amazon.shops</field>
        <field name = "arch" type = "xml">
            <kanban class="o_kanban_mobile">
                <field name = "shop_name"/>
                <field name = "url"/>
                <field name = "total_no_of_products"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click shadow rounded border-light mb-3">
                            <div class="row">
                                <div class="col-6">
                                    <strong class="o_kanban_record_title">
                                        <span style="font-size: 20px;">
                                            <t t-esc="record.shop_name.value"/>
                                        </span>
                                    </strong>
                                </div>

                            </div>
                            <div class="row mt8">
                                <div class="col-12 text-muted mb-2 ">
                                    <span class="text-warning">URL : <t t-esc="record.url.value"/>
                                    </span>
                                </div>
                            </div>
                            <div class="row mt8">
                                <div class="col-12 text-muted mb-2">
                                    <span class="text-warning">Products : <t t-esc="record.total_no_of_products.value"/>
                                    </span>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="amazon_shop_list_view" model="ir.ui.view">
        <field name="name">amazon.shops.list.view</field>
        <field name="model">amazon.shops</field>
        <field name="arch" type="xml">
            <tree>
                <field name = "shop_name"/>
                <field name = "url"/>
                <field name = "total_no_of_products"/>
            </tree>
        </field>
    </record>
    <record id="amazon_shop_form_view" model="ir.ui.view">
        <field name="name">amazon.shops.form.view</field>
        <field name="model">amazon.shops</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name = "product_pricing_action" type = "object" string = "Product Pricing" class = 'btn-primary'/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="amazon_sku_action" type="object" class="oe_stat_button" icon="fa-cubes" string="Product Listing"/>

                    </div>

                    <!-- <button name="amazon_sku_action" type="object" class='btn-primary' icon="fa-cubes" string="Product Listing"> -->
                    <!-- </button> -->
                    <group>
                        <group>

                            <field name = "shop_name"/>
                            <field name = "url"/>
                            <field name = "total_no_of_products"/>

                        </group>
                    </group>


                </sheet>

            </form>
        </field>

    </record>

    <record id="amazon_shop_search_view" model="ir.ui.view">
        <field name="name">amazon.shops.search.view</field>
        <field name="model">amazon.shops</field>
        <field name="arch" type="xml">
            <search>
                <field name = "shop_name"/>
                <field name = "url"/>
                <field name = "total_no_of_products"/>

            </search>
        </field>
    </record>



    <record id="amazon_shop_action" model="ir.actions.act_window">
        <field name="name">Amazon shops</field>
        <field name="res_model">amazon.shops</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="amazon_menu" parent="product_pricing_submenuu" action="amazon_shop_action" name="Amazon"/>


</odoo>